@model IEnumerable<ReCVEServer.Models.Client>


@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <script src="~/js/Device/devices.js" asp-append-version="true"></script>
    <script type="text/javascript">
            @{
                var clientListJson = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
            }
            const clientList = JSON.parse('@Html.Raw(clientListJson)');

        window.addEventListener('DOMContentLoaded', function () {
            createClientTable(clientList);
        });
    </script>
}

<div class="container-fluid mt-4">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Devices</h1>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="form-group">
                <label class="control-label">Clients</label>

            </div>
        </div>
        <div class="row">

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary  shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="font-weight-bold text-dark mb-1">
                                    Online Hosts
                                </div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
                                    </div>

                                    <div class="col">
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary  shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="font-weight-bold text-dark mb-1">
                                    CVE's Found
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">300</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card border-left-primary  shadow h-100 py-2 mb-4">
                    <div class="card-body">
                        <table id="clients_table" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>IP Address</th>
                                    <th>OS</th>
                                    <th>OS Version</th>
                                    <th>Enrollment Date</th>
                                    <th>Online</th>

                                </tr>
                            </thead>
                            <tbody>
                                <!-- Table data will be populated by the DataTables library -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
